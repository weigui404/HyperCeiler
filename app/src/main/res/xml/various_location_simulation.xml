<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory android:title="@string/various_location_simulation_1_title">

        <EditTextPreference
            android:title="@string/location_simulation_package_name"
            android:key="prefs_key_location_simulation_package_name" />

        <DropDownPreference
            android:key="prefs_key_location_simulation_location"
            android:title="@string/location_simulation_location"
            app:entries="@array/location"
            app:entryValues="@array/location_value"
            android:defaultValue="0" />

        <EditTextPreference
            android:title="@string/location_simulation_location_custom"
            android:key="prefs_key_location_simulation_location_custom" />

        <Preference android:title="@string/location_simulation_network" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/various_location_simulation_2_title">

        <EditTextPreference
            android:title="@string/location_simulation_package_name"
            android:key="prefs_key_location_simulation_package_name2" />

        <DropDownPreference
            android:key="prefs_key_location_simulation_location2"
            android:title="@string/location_simulation_location"
            app:entries="@array/location"
            app:entryValues="@array/location_value"
            android:defaultValue="0" />

        <EditTextPreference
            android:title="@string/location_simulation_location_custom"
            android:key="prefs_key_location_simulation_location_custom2" />

        <Preference android:title="@string/location_simulation_network" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/various_location_simulation_3_title">

        <EditTextPreference
            android:title="@string/location_simulation_package_name"
            android:key="prefs_key_location_simulation_package_name3" />

        <DropDownPreference
            android:key="prefs_key_location_simulation_location3"
            android:title="@string/location_simulation_location"
            app:entries="@array/location"
            app:entryValues="@array/location_value"
            android:defaultValue="0" />

        <EditTextPreference
            android:title="@string/location_simulation_location_custom"
            android:key="prefs_key_location_simulation_location_custom3" />

        <Preference android:title="@string/location_simulation_network" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/various_location_simulation_all_title">

        <DropDownPreference
            android:title="@string/location_simulation_operator_fix"
            android:key="prefs_key_location_simulation_operator_fix"
            app:entries="@array/operator_fix"
            app:entryValues="@array/operator_fix_value"
            android:defaultValue="2" />

        <Preference android:title="@string/location_simulation_gps" />
        <EditTextPreference android:title="@string/location_simulation_mac" />
        <EditTextPreference android:title="@string/location_simulation_wifi" />
        <EditTextPreference android:title="@string/location_simulation_router_mac" />
    </PreferenceCategory>

</PreferenceScreen>